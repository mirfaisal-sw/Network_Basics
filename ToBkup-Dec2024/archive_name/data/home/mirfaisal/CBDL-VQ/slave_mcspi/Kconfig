# (slave mcspi support would go here)

config SPI_OMAP24XX_SLAVE
    tristate "McSPI in  slave mode driver for OMAP"
    depends on ARM || ARM64 || AVR32 || HEXAGON || MIPS || SH
    depends on ARCH_OMAP2PLUS || COMPILE_TEST
    help
      SPI slave controller for OMAP24XX and later Multichannel SPI
      (McSPI) modules.

config SPI_OMAP24XX_SLAVE_SUPPORT
    bool "Mcspi slave controller support"
    depends on SPI_OMAP24XX_SLAVE
    default y

config SPI_OMAP24XX_SLAVE_ID
    depends on SPI_OMAP24XX_SLAVE
    hex "Slave controller id"
    default "0xffff"
                      
