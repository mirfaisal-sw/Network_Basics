menu "SPI dabplugin"

config DAB_PLUGIN
	tristate
	default n
	depends on m

config SPI_DAB_PLUGIN
        bool "SPI DAB plugin support for OMAP specific SPI controllers"
        depends on SPI && SPI_OMAP24XX && m
	select DAB_PLUGIN
        help
                Special DAB plugin for omap specific spi controllers

config GENERIC_SPI_DAB_PLUGIN
        bool "Generic platform independent DAB plugin support"
        depends on SPI && m
	select DAB_PLUGIN
        help
                Special DAB plugin

endmenu
