#
# CAL_IF driver configuration
#

menuconfig CAL_IF
	tristate "Exynos Chip Abstraction Layer Interface"
	depends on SOC_SAMSUNG
	default n
	help
	Support CMU CAL for Exynos SoC.

config PWRCAL_EXYNOSAUTOV920
	bool "Samsung EXYNOSAUTOV920"
	depends on CAL_IF
	default n
	help
	  Support Samsung PWRCAL ExynosAutov920 SoC.

config PMUCAL
	bool "Exynos PMU Chip Abstraction Layer"
	depends on CAL_IF
	default y
	help
	Support PMUCAL for Exynos SoC.

config PMUCAL_DBG
	tristate "Exynos PMUCAL debugging interface"
	depends on PMUCAL
	help
	Support PMUCAL debugging for Exynos SoC.

config FLEXPMU
	tristate "Exynos FLEXPMU"
	depends on PMUCAL
	help
	Support PMUCAL for Exynos SoC.

config EXYNOS_FLEXPMU_DBG
	tristate "Exynos FLEXPMU DBG"
	depends on FLEXPMU
	help
	Support FLEXPMU for Exynos SoC.

config CMUCAL
	tristate "Exynos CMU Chip Abstraction Layer"
	depends on CAL_IF
	default y
	help
	Support CMUCAL for Exynos SoC.

config CMUCAL_DEBUG
	tristate "CMUCAL Debug Interface"
	depends on CMUCAL
	help
	Support CMUCAL_DEBUG for Exynos SoC.

config ACPM_DVFS
	tristate "Exynos ACPM DVFS manager"
	depends on CAL_IF && CMUCAL
	default n
	help
	Support ACPM DVFS for Exynos SoC.

config CMUCAL_QCH_IGNORE_SUPPORT
	bool "CMUCAL QCH IGNORE Support"
	depends on CMUCAL && !PWRCAL_EXYNOSAUTOV920
	default y
